<body class="index-page">

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a href="index.html" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="~/DevFolio/assets/img/logo.png" alt=""> -->
                <h1 class="sitename">DevFolio</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="/Admin/Index">Panel</a></li>
                    <li><a href="#hero" class="active">Ana Sayfa<br></a></li>
                    <li><a href="#about">Hakkımda</a></li>
                    <li><a href="#services">Hizmetler</a></li>
                    <li><a href="#portfolio">Portfolyo</a></li>

                    <li><a href="#contact">İletişim</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main class="main">




        <!-- Hero Section -->
        <section id="hero" class="hero section dark-background">

         

                @foreach (var i in Model.About)
                {
                    <img src="@i.PhotoPath" alt="Fotoğraf" style="height: auto;" data-aos="fade-in" />
                }
     
            <div class="container d-flex flex-column align-items-center justify-content-center text-center" data-aos="fade-up" data-aos-delay="100">
                <h2>Merhaba ben @Model.Customer.CustomerKey </h2>
                <p><span class="typed" data-typed-items="Designer, Developer, Freelancer, Photographer"></span></p>
            </div>

        </section>
        <!-- About Section -->
        <section id="about" class="about section">

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="row gy-4">
                    <div class="col-md-6">

                        <div class="row justify-content-between gy-4">
                            <div class="col-lg-5">
                                @if (Model.About != null && Model.About.Any())
                                {
                                    foreach (var i in Model.About)
                                    {
                                       
                                            <img src="@i.PhotoPath" alt="Fotoğraf" style="height: 150px;" data-aos="fade-in" />
                                    }
                                }
                                else
                                {
                                    <p>Boş.</p>
                                }


                                
                            </div>
                            <div class="col-lg-7 about-info">
                                <p><strong>İsim: </strong> <span>@Model?.CustomerKey</span></p>
                                <p><strong>E-mail: </strong> <span>@Model?.Customer.Email</span></p>
                                @if (Model.Contact != null && Model.Contact.Any())
                                {
                                    <p><strong>Telefon: </strong> <span>@Model?.Contact.FirstOrDefault().Phone</span></p>


                                }
                                else
                                {
                                    <p>boş</p>
                                }
                            </div>
                        </div>

                        <div class="skills-content skills-animation">
                            <h5>Yetenekler</h5>
                            @if (Model.Skills != null && Model.Skills.Any())
                            {
                                @foreach (var i in Model.Skills)
                                {
                                    <div class="progress">
                                        <span class="skill"><span>@i.Title</span> <i class="val">@i.Value%</i></span>
                                        <div class="progress-bar-wrap">
                                            <div class="progress-bar" role="progressbar" aria-valuenow="@i.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p>boş.</p>
                            }
                           

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="about-me">
                            <h4>Hakkımda</h4>

                            @if (Model.About != null && Model.About.Any())
                            {

                                @foreach (var i in Model.About)
                                {
                                <p>
                                    @i.Description
                                </p>
                                }
                            }
                            else
                            {
                                <p>boş.</p>
                            }
                           
                            


                        </div>
                    </div>
                </div>

            </div>

        </section><!-- /About Section -->
        <section id="resume" class="resume section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Özgeçmiş</h2>
           
            </div><!-- End Section Title -->

            <div class="container">

                <div class="row">
                    @if (Model.Ozgecmis != null && Model.Ozgecmis.Any())
                    {
                        @foreach (var i in Model.Ozgecmis)
                        {
                            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                                <h3 class="resume-title">@i.Title</h3>

                                <div class="resume-item pb-0">
                                    <h4>@i.Title1</h4>
                                    <p><em>@i.Description</em></p>
                                    <ul>
                                        <li>@Model?.Contact?.FirstOrDefault()?.Address</li>
                                        <li>@Model?.Contact?.FirstOrDefault()?.Phone</li>
                                        <li>@Model.Customer.Email</li>
                                    </ul>
                                </div><!-- Edn Resume Item -->

                                <h3 class="resume-title">Öğrenim</h3>
                                <div class="resume-item">

                                    <h5>@i.YearStart / @i.YearFinish</h5>

                                    <p>@i.Description</p>
                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p>boş.</p>
                    }
                   
               
                  

                </div>

            </div>

        </section><!-- /Resume Section -->
        <!-- Portfolio Section -->
        <section id="portfolio" class="portfolio section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Portfolio</h2>
         
            </div><!-- End Section Title -->

            <div class="container">

                <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

                    <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                        <li data-filter="*" class="filter-active">Tümü</li>
                        @if (Model.Portfolyo != null && Model.Portfolyo.Any())
                        {

                            @foreach (var category in Model.Portfolyo.Select(p => p.Category).Distinct())
                            {
                                <li data-filter=".filter-@category">@category</li>
                            }
                        }
                        else
                        {
                            <p>boş.</p>
                        }




                    </ul>

                    <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                        @if (Model.Portfolyo != null && Model.Portfolyo.Any())
                        {

                            @foreach (var item in Model.Portfolyo)
                            {
                                <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@item.Category">
                                    <img src="@item.PhotoPath" alt="Fotoğraf" style="height: 300px;" data-aos="fade-in" />
                                    <div class="portfolio-info">
                                        <h4>@item.Category</h4>
                                        <p>@item.Descripton</p>
                                        <a href="@item.PhotoPath" title="@item.Category" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                    </div>
                                </div>

                                <!-- End Portfolio Item -->
                            }
                        }
                        else
                        {
                            <p>boş.</p>
                        }


                        
                    </div><!-- End Portfolio Container -->

                </div>

            </div>

        </section><!-- /Portfolio Section -->

        <section id="services" class="services section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Hizmetler</h2>
             
            </div><!-- End Section Title -->

            <div class="container">

                <div class="row gy-4">
                    @if (Model.Hizmetler != null && Model.Hizmetler.Any())
                    {

                        @foreach (var i in Model.Hizmetler)
                        {
                            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                                <div class="service-item  position-relative">
                                    <div class="icon">
                                        <i class="@i.Icon"></i>
                                    </div>
                                    <a href="#" class="stretched-link">
                                        <h3>@i.Title</h3>
                                    </a>
                                    <p>@i.Description</p>
                                </div>
                            </div>

                            <!-- End Service Item -->
                        }

                    }
                    else
                    {
                        <p>boş.</p>
                    }
                   
                  
                </div>

            </div>

        </section><!-- /Services Section -->
        <!-- Faq Section -->
        <section id="faq" class="faq section">


            <div class="container">

                <div class="row gy-4">

                    <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                        <div class="content px-xl-5">
                            <h3><span>Sıkça Sorulan</span><strong>Sorular</strong></h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Duis aute irure dolor in reprehenderit
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                        @{
                            int counter = 1; 
                        }


                        <div class="faq-container">

                            @if (Model.Portfolyo != null && Model.Portfolyo.Any())
                            {

                                @foreach (var i in Model.SSS)
                                {

                                    <div class="faq-item faq-active">
                                        <h3><span class="num">@counter.</span> <span>@i.Soru</span></h3>
                                        <div class="faq-content">
                                            <p>@i.Cevap</p>
                                        </div>
                                        <i class="faq-toggle bi bi-chevron-right"></i>
                                    </div>
                                    counter++;


                                }

                            }
                            else
                            {
                                <p>boş.</p>
                            }

                            
                          

                          

                        </div>

                    </div>
                </div>

            </div>

        </section><!-- /Faq Section -->
        <section id="contact" class="contact section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>İletişim</h2>
                <p>Aşğıdaki iletişim adreslerinden bana ulaşabilirsiniz.</p>
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="info-wrap" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-5">

                        <div class="col-lg-4">
                            <div class="info-item d-flex align-items-center">
                                <i class="bi bi-geo-alt flex-shrink-0"></i>
                                <div>
                                    <h3>Adres</h3>


                                    @if (Model.Contact != null && Model.Contact.Any())
                                    {
                                        @foreach (var i in Model.Contact)
                                        {
                                            <p>@i.Address</p>
                                        }

                                    }
                                    else
                                    {
                                        <p>boş.</p>
                                    }

                                  
                                    
                                </div>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-lg-4">
                            <div class="info-item d-flex align-items-center">
                                <i class="bi bi-telephone flex-shrink-0"></i>
                                <div>
                                    <h3>Telefon</h3>

                                    @if (Model.Contact != null && Model.Contact.Any())
                                    {
                                        @foreach (var i in Model.Contact)
                                        {
                                            <p>@i.Phone</p>
                                        }

                                    }
                                    else
                                    {
                                        <p>boş.</p>
                                    }
                                   
                                </div>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-lg-4">
                            <div class="info-item d-flex align-items-center">
                                <i class="bi bi-envelope flex-shrink-0"></i>
                                <div>
                                    <h3>E-mail</h3>
                                    <p>@Model.Customer.Email</p>
                                </div>
                            </div>
                        </div><!-- End Info Item -->

                    </div>
                </div>


            </div>

        </section><!-- /Contact Section -->







    </main>

    <footer id="footer" class="footer accent-background">

        <div class="container">
            <div class="copyright text-center ">
                <p>© <span>Copyright</span> <strong class="px-1 sitename">DevFolio</strong> <span>All Rights Reserved</span></p>
            </div>
            <div class="social-links d-flex justify-content-center">
